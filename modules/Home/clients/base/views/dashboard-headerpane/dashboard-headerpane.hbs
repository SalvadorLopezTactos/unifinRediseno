<div class="headerpane bg-[--primary-content-background] box-border fixed">
    <h1>
        {{#each meta.panels}}
            {{#each fields}}
                <span class="record-cell" data-type="{{type}}" data-name="{{name}}">
                    {{field ../../this model=../../this.model template=../../this.action}}
                </span>
            {{/each}}
        {{/each}}
        <div class="btn-toolbar pull-right dropdown">
            {{#each meta.buttons}}
                {{field ../this model=../this.model template="detail"}}
            {{/each}}
            {{#if hasAccessToReports}}
                <button class="btn report-visibility-button !hidden" id="filters" data-action="change-visibility" rel="tooltip" data-bs-placement="left" aria-label="{{str "LBL_DASHBOARD_FILTERS" module}}" data-original-title="{{str 'LBL_DASHBOARD_FILTERS' module}}">
                    <i class="sicon sicon-filter"></i>
                    <div class="report-filters-badge absolute !hidden rounded-lg" data-container="filters-badge">0</div>
                </button>
            {{/if}}
        </div>
    </h1>
</div>
