{{#if usingInternalEmailClient}}
    <button class="megamenu-dropdown-item w-full bg-transparent py-2 px-3 flex flex-row items-center text-xs text-[--text-color] hover:bg-[--dropdown-link-background-hover]"
        data-action="email"
        track="click:quickCreate-Emails"
    >
        {{#if def.icon}}
            <i class="{{buildIcon def.icon}} mr-2"></i>
        {{/if}}
        {{label}}
    </button>
{{else}}
    <a class="megamenu-dropdown-item w-full bg-transparent py-2 px-3 flex flex-row items-center text-xs text-[--text-color] hover:bg-[--dropdown-link-background-hover]"
        data-action="email"
        href="mailto:"
        track="click:quickCreate-Emails"
    >
        {{#if def.icon}}
            <i class="{{buildIcon def.icon}} mr-2"></i>
        {{/if}}
        {{label}}
    </a>
{{/if}}
