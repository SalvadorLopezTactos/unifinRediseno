<ul class="nav megamenu" id="userList">
    <li class="dropdown" id="userActions" data-menu="user-actions">
        <div class="btn-group pt-2 pb-1 px-2">
            <button data-bs-toggle="dropdown" class="btn btn-invisible btn-link dropdown-toggle"
                    track="click:userActions" aria-label="{{str 'LBL_USER_MENU'}}" role="button" aria-haspopup="true"
                    aria-expanded="false">
                <span class="block" rel="tooltip" data-bs-placement="bottom" title="{{userName}}">
                    {{#if pictureUrl}}
                        <img src="{{pictureUrl}}" alt="{{userName}}" class="avatar avatar-btn">
                    {{else}}
                        <i class="sicon sicon-lg sicon-user"></i>
                    {{/if}}
                    <i class="sicon sicon-chevron-down"></i>
                </span>
            </button>
            <div class="dropdown-menu border-0 dark:border border-[--dropdown-border-widget] rounded-md shadow-xl rounded-t-none scroll pull-right">
                <ul role="menu">
                    {{#each menulist}}
                        {{#if css_class}}
                            <li class="{{css_class}} megamenu-dropdown-item-container" role="menuitem">
                        {{else}}
                            <li class="megamenu-dropdown-container" role="menuitem">
                        {{/if}}
                        {{#if route}}
                            <a href="{{route}}" class="megamenu-dropdown-item" {{#if openwindow}}target="_blank"{{/if}} track="click:userAction-{{label}}" tabindex="-1">
                        {{else}}
                            <button class="megamenu-dropdown-item w-full" track="click:userAction-{{label}}" tabindex="-1">
                        {{/if}}
                            {{#if img_url}}
                                <span>
                                    <img src="{{img_url}}" alt="{{../../userName}}" class="avatar avatar-mini">
                                </span>
                            {{else}}
                                {{#if icon}}
                                    <i class="{{buildIcon icon}}"></i>
                                {{/if}}
                            {{/if}}
                            {{str label}}
                        {{#if route}}</a>{{else}}</button>{{/if}}
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </li>
</ul>
