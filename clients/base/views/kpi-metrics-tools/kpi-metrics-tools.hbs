<div class="btn-group">
    <button
        type="button"
        data-bs-toggle="dropdown"
        class="btn btn-invisible dropdown-toggle"
        aria-haspopup="true"
        aria-expanded="false"
    >
        <i class="sicon sicon-kebab"></i>
    </button>

    <ul class="dropdown-menu border-0 dark:border border-[--dropdown-border-widget] rounded-md shadow-xl left" role="menu">
        {{#if isAdmin}}
        <li role="presentation"><button type="button" role="menuitem" class="create-new">{{str "LBL_CREATE_NEW" module}}</button></li>
        {{/if}}
        <li role="presentation"><button type="button" role="menuitem" class="organize">{{str "LBL_ORGANIZE" module}}</button></li>
        <li role="presentation"><a role="menuitem" href="#{{buildRoute module='Metrics'}}" class="manage">{{str "LBL_MANAGE" module}}</a></li>
    </ul>
</div>
