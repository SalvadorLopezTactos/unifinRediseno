{{#if layout.showHeaderRow}}
    <div class="record-panel dri-workflows-header dri-workflows-header-panel-row bg-[--activity-row-fluid-color] border-b border-[--activity-row-fluid-border-color] h-10">
        <div class="record-panel-header dri-workflows-header-panel-header record-panel-header-container">
            <div class="row-fluid panel-inactive{{#eq context.attributes.moreLess "more"}} hide{{/eq}}"
                {{#notEq context.attributes.cjAsTab true}} data-moreless="more" {{/notEq}}
                data-target=".customer-parent-create">
                <h4 class="pull-left mt-2.5">
                    <span class="dri-workflows-header-active-inactive-panel">
                        {{#eq useTabs.templateMeta.useTabs true}}
                            {{#eq displaySetting 'panel_top'}}<i class="sicon sicon-chevron-right"></i>
                                {{partial 'smart-guide-count' this this}}
                            {{/eq}}
                        {{/eq}}
                        {{#eq displaySetting 'panel_bottom'}}<i class="sicon sicon-chevron-right"></i>
                            {{partial 'smart-guide-count' this this}}
                        {{/eq}}
                        {{#eq displaySetting 'tab_last'}}
                             {{partial 'smart-guide-count' this this}}
                        {{/eq}}
                        {{#eq displaySetting 'tab_first'}}
                             {{partial 'smart-guide-count' this this}}
                        {{/eq}}
                    </span>
                </h4>
            </div>
            <div class="row-fluid panel-active{{#eq context.attributes.moreLess "less"}} hide{{/eq}}"
                {{#notEq context.attributes.cjAsTab true}}  data-moreless="less" {{/notEq}}
                 data-target=".customer-parent-create">
                <h4 class="pull-left mt-2.5">
                    <span class="dri-workflows-header-active-inactive-panel">
                        {{#eq  useTabs.templateMeta.useTabs true}}
                            {{#eq displaySetting 'panel_top'}}<i class="sicon sicon-chevron-down"></i>
                                {{partial 'smart-guide-count' this this}}
                            {{/eq}}
                        {{/eq}}
                       {{#eq displaySetting 'panel_bottom'}}<i class="sicon sicon-chevron-down"></i>
                             {{partial 'smart-guide-count' this this}}
                        {{/eq}}
                        {{#eq displaySetting 'tab_last'}}
                            {{partial 'smart-guide-count' this this}}
                        {{/eq}}
                        {{#eq displaySetting 'tab_first'}}
                            {{partial 'smart-guide-count' this this}}
                        {{/eq}}
                    </span>
                </h4>
            </div>
        </div>
    </div>
{{/if}}

{{#eq context.attributes.moreLess "more"}}
    {{#if access}}
        <div class="dri-workflows-actions absolute clearfix right-0 top-1">
            <div class="pull-right dri-workflows-actions-buttons min-h-0.25 w-11 -mr-2.5  border-solid border-gray-300">
                {{#each meta.right_buttons}}
                    {{field ../../this model=../../editModel}}
                {{/each}}
            </div>
            <div class="pull-right dri-workflows-actions-fields mr-1">
                {{#each meta.fields}}
                    {{field ../../this model=../../editModel template="edit"}}
                {{/each}}
            </div>
            <div class="pull-right dri-workflows-actions-buttons min-h-0.25 w-11 border-solid border-gray-300 verticalScrollButtontBorderLeft">
                {{#each meta.left_vertical_button}}
                    {{field ../../this model=../../editModel}}
                {{/each}}
            </div>
          <div class="pull-right dri-workflows-actions-buttons border-solid border-gray-300 horizontalScrollButtonBorderRight">
                {{#each meta.left_horizontal_button}}
                    {{field ../../this model=../../editModel}}
                {{/each}}
            </div>
            <div class="pull-right dri-workflows-actions-buttons mr-2">
                {{#each meta.left_fields}}
                    {{field ../../this model=../../model template="edit"}}
                {{/each}}
            </div>
            <div class="pull-right dri-workflows-actions-spinner hide mr-7 mt-1">
                <i class="sicon sicon-refresh sicon-is-spinning"></i>
            </div>
        </div>
    {{/if}}

    {{#if loadRemoval}}
        {{partial 'data-skeleton-loader' this this}}
    {{else}}
        {{#unless collection.length}}
            {{#if collection.dataFetched}}
                <div class="block-footer dri-workflows-actions-footer">
                    {{str "LBL_NO_DATA_AVAILABLE" this.module}}
                </div>
            {{else}}
                {{partial 'data-skeleton-loader' this this}}
            {{/if}}
        {{/unless}}
    {{/if}}
{{/eq}}
