{{#if tabs}}
<div class="tabbable">
    <ul class="nav nav-tabs nav-tabs-indented">
        {{#each tabs}}
            <li class="tab tab-badgeable {{#eq ../activeTab @index}}active{{/eq}}"
                data-bs-toggle="tab" data-index="{{@index}}">
                <a
                    class="ellipsis_inline"
                    data-original-title="{{str name module params}}"
                >
                    {{#if icon}}
                        {{#if icon.module}}
                            {{moduleLabel icon.module 'sm'}}
                        {{/if}}
                        {{#if icon.image}}
                            {{{icon.image}}}
                        {{/if}}
                    {{/if}}
                    <span class="tab-title font-semibold">{{str name module params}}</span>

                    {{#each badges}}
                        {{field ../../this}}
                    {{/each}}
                </a>
            </li>
        {{/each}}
    </ul>
</div>
{{/if}}
{{#if buttons}}
<div class="tabbable-toolbar">
    {{#each buttons}}
        {{field ../this}}
    {{/each}}
</div>
{{/if}}
