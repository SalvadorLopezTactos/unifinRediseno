<button type="button" class="favorite-button btn btn-invisible{{#if value}} active{{/if}}" rel="tooltip"
        title="{{#if value}}{{str 'LBL_UNFAVORITE' this.module}}{{else}}{{str 'LBL_FAVORITE' this.module}}{{/if}}"
        aria-label="{{#if value}}{{str 'LBL_UNFAVORITE' this.module}}{{else}}{{str 'LBL_FAVORITE' this.module}}{{/if}}"
        data-bs-placement="bottom" aria-pressed="{{#if value}}true{{else}}false{{/if}}"
>
    <i class="sicon sicon-star-{{#if value}}fill{{else}}outline{{/if}}"></i>
</button>
