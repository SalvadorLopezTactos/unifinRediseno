{{#if def.buttons}}
    {{#unless def.no_default_action}}
        {{defaultActionBtn.placeholder}}
    {{/unless}}
    {{#if dropdownFields}}
        <a track="click:rowactions"
           class="btn !border-none !bg-transparent {{#if def.no_default_action}} btn-invisible{{/if}}{{#if def.primary}} btn-primary{{/if}}"
           data-bs-toggle="dropdown" href="javascript:void(0);"
           tabindex="{{tabIndex}}" aria-label="{{str 'LBL_LISTVIEW_ACTIONS' module}}"
           aria-haspopup="true" aria-expanded="false" data-bs-display="static">
            <i class="{{buildIcon caretIcon}}"></i>
            {{tooltipTemplate (str 'LBL_LISTVIEW_ACTIONS' module) 'bottom'}}
        </a>
        <ul data-menu="dropdown" class="dropdown-menu border-0 dark:border border-[--dropdown-border-widget] rounded-md shadow-xl" role="menu"></ul>
    {{/if}}
{{/if}}
