<div class="dashlet h-full flex flex-col relative p-0 mb-0 border-none" data-type="dashlet" data-action="droppable">
    {{#if meta.preview}}
        <div data-dashlet="toolbar">
            <div class="dashlet-header dashlet-preview-header flex flex-row items-center h-7 m-0.75">
                <h4 data-toggle="dashlet" rel="tooltip" title="{{meta.label}}" class="dashlet-title flex-grow m-0 ml-1.5 truncate">{{meta.label}}</h4>
            </div>
        </div>
    {{else}}
        <div data-dashlet="toolbar"></div>
    {{/if}}
    <div data-dashlet="dashlet" class="dashlet-content flex-grow"></div>
    <div class="sicon sicon-download swappable-dashlet"></div>
</div>
